{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CADalytix Installer",
  "version": "0.1.0",
  "identifier": "com.cadalytix.installer",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "cd ../frontend && npm run dev",
    "beforeBuildCommand": "cd ../frontend && npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CADalytix Installer",
        "width": 640,
        "height": 420,
        "resizable": false,
        "fullscreen": false,
        "center": true,
        "minWidth": 640,
        "minHeight": 420
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
