# CADalytix Web Service Dockerfile
# Multi-stage build for minimal production image

FROM mcr.microsoft.com/dotnet/aspnet:8.0-alpine AS base
WORKDIR /app
EXPOSE 8080

# Install curl for healthcheck
RUN apk add --no-cache curl

FROM mcr.microsoft.com/dotnet/sdk:8.0-alpine AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src

# Copy project files
COPY ["CADalytix.Web/CADalytix.Web.csproj", "CADalytix.Web/"]
COPY ["CADalytix.Core/CADalytix.Core.csproj", "CADalytix.Core/"]
RUN dotnet restore "CADalytix.Web/CADalytix.Web.csproj"

# Copy source and build
COPY . .
WORKDIR "/src/CADalytix.Web"
RUN dotnet build "CADalytix.Web.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "CADalytix.Web.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

# Create logs directory
RUN mkdir -p /app/logs && chmod 755 /app/logs

# Run as non-root user
RUN adduser -D -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

ENV ASPNETCORE_URLS=http://+:8080
ENV ASPNETCORE_ENVIRONMENT=Production
ENV CADALYTIX_LOG_LEVEL=Info

ENTRYPOINT ["dotnet", "CADalytix.Web.dll"]

